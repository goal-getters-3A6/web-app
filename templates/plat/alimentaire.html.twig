{% block body %}
<div style="height: 100px;"></div> <!-- Empty space with height 100px -->

<!-- Plat Section -->
<div class="plat">
    <div style="height: 50px;"></div> <!-- Empty space with height 50px -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col text-center">
                <div class="section_title_container">
                    <div class="section_title" style="color: #31241E; font-size: 32px; text-transform: uppercase; font-weight: bold;">Nos plats</div>
                    <p style="font-size: 16px; color: #31241E;">Découvrez notre cafétéria Go Fit Pro, où chaque repas est conçu pour soutenir vos objectifs de remise en forme. Notre menu propose des options savoureuses et équilibrées pour vous aider à maintenir une alimentation saine et énergétique, avant et après vos séances d'entraînement.</p>
                    
                    {# Display Search Form #}
                    {{ form_start(form, {'attr': {'class': 'mt-3 d-flex flex-row'}}) }}
                    {{ form_row(form.keyword, {'label': false, 'attr': {'class': 'form-control mr-sm-2', 'placeholder': 'Rechercher'}}) }}
                    {{ form_row(form.search, {'label': 'Rechercher', 'attr': {'class':"plat_link btn btn-primary"}}) }}
                    <a href="{{ path('app_avisp_index') }}" class="btn btn-success">Conultez mes avis</a>
                    {{ form_end(form) }}
                   
                    <!-- Sort buttons for price -->
                    <a href="{{ path('app_plat_index', {'sortByPrice': 'asc'}) }}" class="btn btn-info">Trier par prix croissant</a>
                    <a href="{{ path('app_plat_index', {'sortByPrice': 'desc'}) }}" class="btn btn-info">Trier par prix décroissant</a>

                    <!-- Sort buttons for calories -->
                    <a href="{{ path('app_plat_index', {'sortByCalories': 'asc'}) }}" class="btn btn-info">Trier par calories croissantes</a>
                    <a href="{{ path('app_plat_index', {'sortByCalories': 'desc'}) }}" class="btn btn-info">Trier par calories décroissantes</a>
                </div>
            </div>
        </div>
        
        <div style="height: 50px;"></div> <!-- Empty space with height 50px -->
        
        <div class="row plat_row">
            <!-- Display Search Results -->
            {% if plats is defined %}
                {% for plat in plats %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="plat_card p-3"> <!-- Added padding to the plat card -->
                           <img src="{{ asset(plat.photop) }}" alt="{{ plat.nomp }}" style="width: 330px; height: 330px;">

                            <div class="plat_details">
                                <h3 class="plat_name">{{ plat.nomp | upper }}</h3>
                                <div class="plat_description">
                                    <p class="description_text mb-2">Description: {{ plat.descp }}</p>
                                    <p class="description_text mb-2">Allergies: <span class="alergie">{{ plat.alergiep }}</span></p>
                                    <p class="description_text mb-2">Calories: {{ plat.calories }}</p>
                                    <p class="description_text mb-2">Prix: <span class="price">{{ plat.prixp }}</span></p>
                                </div>
                                <a href="{{ path('app_plat_show', {'idp': plat.idp}) }}" class="plat_link btn btn-primary">Détails</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <!-- If no plats found -->
                    <div class="col">
                        <p style="color: #db1f48;">Aucun plat trouvé</p>
                    </div>
                {% endfor %}
            {% endif %}
            <!-- End of Search Results -->
        </div>
    </div>
</div>

<div style="height: 100px;"></div> <!-- Empty space with height 100px -->

<style>
    /* Button styles */
    .plat_link {
        background-color: #db1f48;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    /* Button hover effect */
    .plat_link:hover {
        background-color: #ad1625; /* Darken the color on hover */
    }

    /* Plat card styles */
    .plat_card {
        border: 1px solid #ccc;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    /* Plat card hover effect */
    .plat_card:hover {
        transform: translateY(-5px); /* Move up on hover */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

{% endblock %}































