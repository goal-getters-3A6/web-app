{% extends 'plat/alimentaireback.html.twig' %}

{% block title %}Plat index{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="pl-4">
        <h1 class="mb-4">Nos plats</h1>

        <div class="mb-3">
            <a href="{{ path('app_plat_new') }}" class="btn btn-success">Ajouter un plat</a>
            {% if not app.request.query.has('export') %}
                <a href="{{ path('app_plat_indexb', {'export': 1}) }}" class="btn btn-primary">Export to Excel</a>
            {% endif %}
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Description</th>
                        <th scope="col">Allergies</th>
                        <th scope="col">Status</th>
                        <th scope="col">Calories</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for plat in plats %}
                        <tr>
                            <td>{{ plat.nomp }}</td>
                            <td>{{ plat.prixp }}</td>
                            <td>{{ plat.descp }}</td>
                            <td>{{ plat.alergiep }}</td>
                            <td>{{ plat.etatp ? 'En stock' : 'HORS STOCK' }}</td>
                            <td>{{ plat.calories }}</td>
                            <td>
                                <a href="{{ path('app_plat_edit', {'idp': plat.idp}) }}" class="btn btn-sm btn-secondary">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
