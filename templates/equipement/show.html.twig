{% extends 'equipement/equipement.html.twig' %}

{% block title %}Equipement{% endblock %}

{% block body %}
<br>
<br>
<br>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col">
            <h1>Equipement</h1>
            <div class="equipement-details">
                <div class="row">
                    <div class="col-md-4">
                       <img src="{{ path('user_images', {'imageName': equipement.imageeq|url_encode}) }}"class="img-fluid" style="max-height: 300px;">

                    </div>
                    <div class="col-md-8">
                         <p><strong>{{ 'Equipment'|trans }}:</strong> {{ equipement.nomeq }}</p>
                        <p><strong>{{ 'Description'|trans }}:</strong> {{ equipement.desceq }}</p>
                        <p><strong>{{ 'Documentation'|trans }}:</strong> {{ equipement.doceq }}</p>
                        <p><strong>{{ 'Category'|trans }}:</strong> {{ equipement.categeq }}</p>
                        <p><strong>{{ 'Brand'|trans }}:</strong> {{ equipement.marqueeq }}</p>
                        <p><strong>{{ 'Serial Number'|trans }}:</strong> {{ equipement.matriculeeq }}</p>
                        
                        
                    </div>
                </div>
            </div>
            <br>
            <br>
            <a href="{{ path('app_equipement_index') }}" class="btn btn-secondary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
