{% extends 'plat/alimentaire.html.twig' %}
{% block title %}
    Résultat des Calories
{% endblock %}

{% block body %}
<div style="height: 100px;"></div> 

<!-- Plat Section -->
<div class="plat">
    <div style="height: 50px;"></div> 
    <div class="container">
        <div class="row justify-content-center">
            <div class="col text-center">
                <div class="section_title_container">
                    <div class="section_title" style="color: #31241E; font-size: 32px; text-transform: uppercase; font-weight: bold;">Plats dans la plage calorique recommandée</div>
                     <div class="container d-flex justify-content-center align-items-center" style="height: 50vh;">
        <div class="text-center">
            
            <!-- Video Player -->
            <video controls width="640" height="360">
                <source src="{{ asset('videos/aaa.mp4') }}" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>
                </div>
            </div>
        </div>
        
        <div style="height: 50px;"></div>
        
        <div class="row plat_row">
            <!-- Display Plats within Calorie Range -->
            {% if platsInRange is defined and platsInRange|length > 0 %}
                {% for plat in platsInRange %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="plat_card p-3"> <!-- Added padding to the plat card -->
                            <img src="{{ asset(plat.photop) }}" alt="{{ plat.nomp }}" style="width: 330px; height: 330px;">

                            <div class="plat_details">
                                <h3 class="plat_name">{{ plat.nomp | upper }}</h3>
                                <div class="plat_description">
                                    <p class="description_text mb-2">Description: {{ plat.descp }}</p>
                                    <p class="description_text mb-2">Allergies: <span class="alergie">{{ plat.alergiep }}</span></p>
                                    <p class="description_text mb-2">Calories: {{ plat.calories }}</p>
                                    <p class="description_text mb-2">Prix: <span class="price">{{ plat.prixp }}</span></p>
                                </div>
                                <a href="{{ path('app_plat_show', {'idp': plat.idp}) }}" class="plat_link btn btn-primary">Détails</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
               
                <div class="col">
                    <p style="color: #db1f48;">Aucun plat trouvé dans la plage calorique recommandée</p>
                </div>
            {% endif %}
       
        </div>
    </div>
</div>

<div style="height: 100px;"></div> <!-- Empty space with height 100px -->

<style>
    /* Button styles */
    .plat_link {
        background-color: #db1f48;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    /* Button hover effect */
    .plat_link:hover {
        background-color: #ad1625; /* Darken the color on hover */
    }

    /* Plat card styles */
    .plat_card {
        border: 1px solid #ccc;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    /* Plat card hover effect */
    .plat_card:hover {
        transform: translateY(-5px); /* Move up on hover */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>


{% endblock %}
