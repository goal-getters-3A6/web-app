{% extends 'equipement/equipement.html.twig' %}

{% block title %}Avis de l'équipement {{ equipement.nomeq }}{% endblock %}

{% block body %}

    <div class="container">
    <br><br><br><br>
        <div class="row justify-content-center"><br><br>
            <div class="col-md-8"><br><br>
                <h1 class="text-center">Avis de l'équipement {{ equipement.nomeq }}</h1>
                <div class="mb-4">
                    <h2>Veuillez saisir votre commentaire :</h2>
                    {{ include('avisequipement/_form.html.twig') }}

                    {% if alertType %}
                        {% if alertType == 'warning' %}
                            <div class="alert alert-warning" role="alert">
                                Votre compte a été temporairement suspendu en raison de contenus inappropriés. Veuillez réessayer plus tard.
                            </div>
                        {% elseif alertType == 'block' %}
                            <div class="alert alert-danger" role="alert">
                                Votre compte a été bloqué en raison de contenus inappropriés. Veuillez contacter l'administrateur pour plus d'informations.
                            </div>
                        {% endif %}
                    {% endif %}
                </div>

                <div class="mb-4">
                    <h2>Avis des utilisateurs :</h2>
                    <div id="avis-container">
                        {% if avisEquipement is not empty %}
                            <ul class="list-group">
                                {% set i = 0 %}
                                {% for avis in avisEquipement %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            {#<img src="{{ asset(avis.idUs.image) }}" style="width: 50px; height: 50px;" />#}
                                            {{ avis.idUs.nom ~ ' ' ~ avis.idUs.prenom ~ ' :' }}
                                            {{ avis.commaeq }}
                                        </div>
                                        <div>
                                           
                                                {% if not app.user.isStatut() %}
                                                 {% set imagePath %}
                                            {% if emotions[i] == 'Joie' %}
                                                {{ asset('Front/images/joie.png') }}
                                            {% elseif emotions[i] == 'Tristesse' %}
                                                {{ asset('Front/images/tristesse.png') }}
                                            {% elseif emotions[i] == 'Neutre' %}
                                                {{ asset('Front/images/neutre.png') }}
                                            {% else %}
                                                {{ asset('Front/images/question.png') }}
                                            {% endif %}
                                        {% endset %}

                                       
                                        <img src="{{ imagePath }}" alt="Smiley Icon" width="40" height="40">
 {% if app.user == avis.idUs %}
                                                    <form method="post" action="{{ path('avis_delete', {'id': avis.idaeq}) }}" style="display: inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer cet élément ?');">
                                                        <button type="submit" class="btn btn-danger"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
        <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
    </svg></button>
                                                    </form>
                                                    <a href="{{ path('avis_edit', {'id': avis.idaeq}) }}" class="btn btn-primary ml-2"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
  <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z"/>
</svg></a>
                                                {% else %}
                                                    <button class="btn btn-danger" disabled>
                                                     <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
        <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
    </svg>
                                                    </button>
                                                    <button class="btn btn-primary ml-2" disabled><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
  <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z"/>
</svg></button>
                                                {% endif %}
                                            {% endif %}
                                        </div>
                                        
                                        {% set i = i + 1 %}
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p>Aucun avis n'a été trouvé pour cet équipement.</p>
                        {% endif %}
                    </div>
                </div>
                {% if not app.user.isStatut() %}
                <a href="{{ path('app_equipement_index') }}" class="btn btn-secondary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"/>
</svg></a>
                {% else %}
                <button class="btn btn-secondary" disabled><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"/>
</svg></button>
                {% endif %}

                <br><br>
            </div>
        </div>
    </div>
{% endblock %}
