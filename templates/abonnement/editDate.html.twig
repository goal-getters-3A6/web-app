{# templates/abonnement/edit.html.twig #}

{% extends '/abonnement/abonnement.html.twig' %}

{% block title %}Modifier Abonnement{% endblock %}

{% block body %}
    <h1>Modifier Abonnement</h1>

    <form method="post">
        <div class="form-group">
            <label for="new_expiration_date">Nouvelle Date d'expiration :</label>
            <input type="date" id="new_expiration_date" name="new_expiration_date" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </form>
{% endblock %}
