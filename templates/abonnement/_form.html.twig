<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
        {{ form_start(form, {'attr': {'class': 'forms-sample', 'novalidate': 'novalidate' }}) }}    
            <div class="mb-3">
                {{ form_row(form.montantab, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.montantab) }}
            </div>
            <div class="mb-3">
            
                {{ form_row(form.dateexpirationab, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateexpirationab) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.codepromoab, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.codepromoab) }}
              
            </div>
           
            <div class="text-center">
                <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                  
            </div>
 
            {{ form_end(form) }}
        </div>
       
    </div>
</div>
