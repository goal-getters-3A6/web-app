{% extends '/abonnement/abonnement.html.twig' %}

{% block title %}Abonnements de {{ user.nom }}{% endblock %}

{% block body %}
    <h1>Abonnements de {{ user.nom }}</h1>

    {% if abonnements is empty %}
        <p>Aucun abonnement trouvé pour cet utilisateur.</p>
    {% else %}
        <ul>
            {% for abonnement in abonnements %}
                <li>
                    <strong>{{ abonnement.typeab }}</strong>
                    <p>Prix : {{ abonnement.montantab }} € / mois</p>
                    <p>Date d'expiration : {{ abonnement.dateexpirationab|date('d/m/Y') }}</p>
                    {# Bouton Modifier #}
                    <form action="{{ path('app_abonnement_editDate', {'userId': abonnement.getIdu}) }}" method="get">
                        <button type="submit">Modifier</button>
                    </form>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
