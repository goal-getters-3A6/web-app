
{% extends '/abonnement/abonnement.html.twig' %}

{% block body %}
<form action="{{ path('payment') }}" method="post" id="payment-form">
  <div class="form-row">
    <label for="card-element">
      Numéro de carte
    </label>
    <input id="card-expiry" type="text" placeholder="MM/YY">
    <div id="card-element">
      <!-- Element où le formulaire de carte de crédit de Stripe sera injecté -->
    </div>
    <div id="card-errors" role="alert"></div>
  </div>

  <div class="form-row">
    <label for="card-expiry">
      Date d'expiration
    </label>
    <input id="card-expiry" type="text" placeholder="MM/YY">
  </div>

  <div class="form-row">
    <label for="card-cvc">
      Code de sécurité (CVC)
    </label>
    <input id="card-cvc" type="text" placeholder="CVC">
  </div>

  <button type="submit">Payer</button>
</form>
{% endblock %}
