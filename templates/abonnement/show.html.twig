{% extends 'back-base.html.twig' %}

{% block title %}Détails de l'Abonnement{% endblock %}

{% block body %}
    <div class="container">
    <br>
    <br>
    <br>
    <br>
        <h1 class="text-center mb-4">Détails de l'Abonnement</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">ID</th>
                            <td>{{ abonnement.idab }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Montant</th>
                            <td>{{ abonnement.montantab }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date d'expiration</th>
                            <td>{{ abonnement.dateexpirationab ? abonnement.dateexpirationab|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Code promo</th>
                            <td>{{ abonnement.codepromoab }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Type</th>
                            <td>{{ abonnement.typeab }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Durée</th>
                            <td>{{ abonnement.dureeab }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center">
                    <a href="{{ path('app_abonnement_index') }}" class="btn btn-secondary">Retour à la liste</a>
                   <a href="{{ path('app_abonnement_edit', {'idab': abonnement.idab}) }}" class="btn btn-primary">Modifier</a>
                    {{ include('abonnement/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
